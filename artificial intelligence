
def Srija_chatbot(user_input):
    user_input = user_input.lower()
    
    
    if user_input in ['hello', 'hi']:
        return "Hello there! I am Srija"
    elif user_input == "who are you?":
        return "I'm a rule-based, chatbot developed by Srija."
    elif user_input == "how are you?":
        return "I'm Fine. what about you ? I'm here to assist you!"
    elif user_input == "what is artificial intelligence?":
        return "artificial intelligence(AI) refers to the simulation of human intelligence processes by machines."
    elif user_input == "name some fruits":
        return "Yeah sure! Mango, Apple, Grapes, are some fruits which I can suggest"
    elif user_input == "name some vegetables":
        return "Yeah sure! Potato, Carrot, Bringal are some vegetables which I can suggest"
    elif user_input in ['bye', 'goodbye']:
        return "goodbye! Have a great day!"
    else:
        return "I'm sorry, I didn't quite get that. I am a pre-defined chatbot of Srija. Please ask me pre-defined Questions"


while True:
    user_query = input("You: ")
    if user_query.lower() == 'exit' :
        break
    response = Srija_chatbot(user_query)
    print("Srija_AI:", response)
